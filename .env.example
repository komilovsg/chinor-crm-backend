# Подключение к PostgreSQL (asyncpg). Для разработки — локальная БД или Railway.
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/chinor

# Секрет для подписи JWT. В проде — длинная случайная строка.
JWT_SECRET=change-me-in-production

# Разрешённые origins для CORS через запятую (адреса фронта).
# Локально: http://localhost:5173. Прод (Vercel): https://chinor-crm.vercel.app
CORS_ORIGINS=http://localhost:5173,https://chinor-crm.vercel.app

# Порт (на Railway задаётся автоматически через PORT; локально по умолчанию 8000).
# PORT=8000

# Сид первого админа (B11): если в БД нет пользователей, создаётся один с этими данными.
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=secure-password
